{
    "compileOnSave": true,
    "compilerOptions": {
        "baseUrl": "./src",
        "declaration": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "inlineSourceMap": true,
        "lib": ["dom", "es6", "es2017"],
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "dist/",
        "paths": {
            "@api/*": ["api/*"],
            "@entity/*": ["entity/*"],
            "@helpers/*": ["helpers/*"],
            "common/*": ["../common/src/*"]
        },
        "target": "es6"
    },
    "exclude": ["node_modules", "public", "dist"],
    "include": ["src/**/*"]
}
