{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "lib": ["es5", "es6"],
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist/",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "baseUrl": "./src",
        "paths": {
            "@entity/*": ["entity/*"],
            "@api/*": ["api/*"],
            "@subscribers/*": ["subscribers/*"],
            "@helpers/*": ["helpers/*"],
            "@policy-engine/*": ["policy-engine/*"],
            "@auth/*": ["auth/*"]
        }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"],
    "compileOnSave": true
}
